// schema.prisma

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["orderByNulls"]
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model properties {
    id              String         @id
    title           String
    auction_date    DateTime
	  city            String
	  address         String
	  reserve_price   Float
    estimate_price  Float?
	  size            Float       @map("property_size")
	  type            String      @map("property_type")
	  tenure          String
    extra_info      String?
	  image_url       String?
    isexpired       Boolean     @default(false)
    createdByWs     String?       
    createdAt       DateTime    @default(now())
    updatedByWs     String? 
    updatedAt       DateTime?
}

model current_listing {
    id              Int         @id @default(autoincrement())
    legacy_id       String
    priority        Int         @default(0)
    title           String?
    auction_date    DateTime?   
    is_est_date     Boolean     @default(false)
	  city            String?
    unitno          String?
	  address         String?
	  reserve_price   Float?
    estimate_price  Float?
	  size            Float?       @map("property_size")
	  type            String?      @map("property_type")
	  tenure          String?
    extra_info      String?
    bank            String?
    auction_type    String?
    owner           String?
    auctioner       String?
    auctioner_no    String?
    remarks         String?
    ipro            Boolean      @default(false)
    ep              Boolean      @default(false)
    pg              String?
    createdAt       DateTime     @default(now())
    updatedAt       DateTime?  
}

model properties_staging {
    id              String         @id
    title           String
    auction_date    DateTime
	  city            String
	  address         String
	  reserve_price   Float
    estimate_price  Float?
	  size            Float       @map("property_size")
	  type            String      @map("property_type")
	  tenure          String
    extra_info      String?
	  image_url       String?
    createdByWs     String?
    action          String
}

model user {
  email              String         @id
}

